<%= form_with(model: article) do |form| %>

  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_area :title %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.label :excerpt, style: "display: block" %>
    <%= form.text_area :excerpt %>
  </div>

  <div>
    <%= form.label :image_caption, "Image Caption", style: "display: block" %>
    <%= form.text_area :image_caption %>
  </div>

  <%= form.select :author_id, options_from_collection_for_select(Author.all, :id, :name, article.author) %>

  <%= form.select :category_id, options_from_collection_for_select(Category.all, :id, :name, article.category) %>

  <div>
    <%= form.label :body, "Body", style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :path, "Path", style: "display: block" %>
    <%= form.text_area :path %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
