<%= form_with(model: article) do |form| %>

  <div class="field">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.label :image_caption, "Image Caption", style: "display: block" %>
    <%= form.text_field :image_caption %>
</div>

  <%= form.select :author_id, options_from_collection_for_select(Author.all, :id, :name) %>

  <%= form.select :category_id, options_from_collection_for_select(Category.all, :id, :name) %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
