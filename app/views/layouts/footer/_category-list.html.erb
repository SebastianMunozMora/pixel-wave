<section>
    <div class="category-list">
        <% Category.all.each do |category| %>
            <h6 class="<%="category category-heading category-heading-#{category.name}"%>">
                <%= link_to category.name, "/category/#{category.name}", :class => "category-links" %>
            </h6>
        <% end %>
    </div>
</section>
