
<div style="justify-items: center;" class="page">
  <%= link_to "Donation Page", "/donation/", :class => "main-donation-link"%>
  <div class="page-articles">
    <div class="categories-section">
      <% @categories.each do |category| %>
        <div class="<%= "category category-heading category-heading-#{category.name}" %>">
          <%= link_to "#{category.name}", "/category/#{category.name}" %>
          </div>
        <div class="vertical">
          <% category.articles.visible.order(created_at: :desc).slice(0,2).each do |article| %>
            <%= render partial: "common/thumb", locals: { article: article, category: false } %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="main-section">
      <div class="vertical">
        <%= render partial: "common/article-partial-list", locals: { articles: @articleSearch ? @articleSearch : @articles.slice(0, 5) } %>
      </div>
    </div>
  </div>
</div>