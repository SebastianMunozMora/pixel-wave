<style>
  .thumb {
    width: 80%;
    vertical-align: top;
    justify-items: left;
    display: inline-flex;
    border-radius: 5px;
    .image-box {
        flex-basis: fit-content;
        img {
            max-width: 100px;
            max-height: 100px;
        }
    }

    .article-heading {
        font-size: 1rem;
        width: 100%;
    }

    .text-box {
        margin: 5px;
        margin-left: 15px;
        inline-size: fit-content;
    }

    .date-author-field {
        display: inline-flex;
        font-size: 15px;
    }

    .author-box {
        padding: 5px;
    }
  }
</style>

<article id="<%= dom_id article %>" class="thumb">
  <div class="image-box">
    <%= image_tag(article.image, :class => "top-image", :size => '260x180') %>
  </div>

  <div class="text-box">
    <div class="article-heading">
        <%= link_to "#{article.title}", article %>
    </div>

    <div class="date-author-field">


    </div>

    <div class="date-author-field">
      <div class="date-field">
        <%= link_to "#{article.created_at.strftime("%d/%m/%y")}", "date/?current=#{article.created_at.to_date}" %>
      </div>
      <div class="author-box">
        <%= link_to "#{article.author.name}", article.author %>
      </div>
    </div>


    <% if category %>
      <div class="category">
        <%= article.category.name %>
      </div>
    <% end %>
  </div>
</article>
