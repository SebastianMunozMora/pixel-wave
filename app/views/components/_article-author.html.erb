<div class="author-box">
    <% if author.avatar.attached? %>
        <div class="">
            <%= image_tag(author.avatar, :class => "author-image", :alt => "#{author.name}", :style=>"width:50px; height: 50px", :loading => "lazy") %>
        </div>
    <% end %>
    <%= link_to "#{author.name}", author %>
</div>