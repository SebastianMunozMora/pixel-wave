<div class="author-box">
    <% if author.avatar.attached? %>
        <div class="">
            <%= image_tag(author.low_quality_image, :class => "author-image", :alt => "#{author.name}", :style=>"width:50px; height: 50px") %>
        </div>
    <% end %>
    <%= link_to "#{author.name}", author %>
</div>